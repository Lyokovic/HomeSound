		<div class="container">
			<div class="row">
				<div class="col-md-4">
					<h4>Edit radio list</h4>
					<table class="table">
						<thead>
							<tr>
								<th> Radios </th>
							</tr>
						</thead>
						<tbody>
							{% for id,name in stations %}
							<tr>
								<td> 
									{{name}}
								</td>
								<td> 
									<a href="editRadios?action=delete&id={{id}}&form" ><button type="button" class="btn btn-danger" id="btnStation{{id}}">Delete</button></a>
								</td>
							</tr>
							{% endfor %}
						</tbody>
					</table>

					<h4>Add a new radio</h4>
					<form action="editRadios" method="GET">
						<input type="hidden" name="action" value="add" />
						<div class="form-group">
							<label for="radioName">Radio name:</label>
							<input type="text" class="form-control" id="radioName" name="name">
						</div>
						<div class="form-group">
							<label for="radioUri">Radio URI:</label>
							<input type="text" class="form-control" id="radioUri" name="uri">
						</div>
						<input type="hidden" name="form" />
						<button type="submit" class="btn btn-default">Add</button>
					</form>
				</div>
			</div>
		</div>
		</div>
